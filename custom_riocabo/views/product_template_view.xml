<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_product_template_riocabo_form_view" model="ir.ui.view">
        <field name="name">custom.product.template.riocabo.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="scrap_unbuild.scrap_unbuild_product_product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="subproduct_ids" position="replace">
                <field name="subproduct_ids">
                    <tree>
                        <field name="id" widget="open_tab"/>
                        <field name="name"/>
                        <field name="product_variant_count" invisible="1"/>
                        <field name="default_code" optional="show"/>
                        <field name="barcode" optional="hide" attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="categ_id" optional="hide"/>
                        <field name="type" optional="hide" readonly="1"/>
                        <field name="uom_id" readonly="1" optional="hide" groups="uom.group_uom"/>
                        <field name="active" invisible="1"/>
                        <field name="activity_exception_decoration" widget="activity_exception"/>
                        <field name="uses" optional="hide"/>
                        <field name="references" optional="show"/>
                        <field name="ref_oem" optional="show"/>
                        <field name="ref_market" optional="show"/>
                        <field name="chassis_pt" optional="hide"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

</odoo>