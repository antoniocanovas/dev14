<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_inh_form" model="ir.ui.view">
        <field name="name">account.move.inh.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field expr="//field[@name='invoice_date']" position = 'after'>
                <field name="invoice_tag_ids" widget = "many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="account_invoice_inh_tree" model="ir.ui.view">
        <field name="name">account.move.inh.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="activity_ids" position = 'after'>
                <field name="invoice_tag_ids" widget = "many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

</odoo>
