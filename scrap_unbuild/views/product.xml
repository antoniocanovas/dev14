<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="scrap_unbuild_product_product_template_only_form_view" model="ir.ui.view">
        <field name="name">scrap.product.product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button class="oe_highlight" type="action" name="%(action_scrap_unbuild_wizard)d"
                            attrs="{'invisible':[('unbuild_type','not in',['main','subproduct'])]}"
                            string="Unbuild" context="{'default_product_tmpl_id':id}"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='options']" position="before">
                <group>
                    <field name="unbuild_type" force_save="1" attrs="{'readonly':[('unbuild_type_readonly','=',True)]}"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="desguace" string="Desguace" attrs="{'invisible':[('unbuild_type','not in',['main','subproduct'])]}">
                    <div attrs="{'invisible':['|',('unbuild_type','!=','subproduct'),('parent_id','!=',False)]}">
                        <h4>Asigna el veh√≠culo o parte para poder seguir desguazando este subproducto:</h4>
                    </div>
                    <group>
                        <field name="parent_id" force_save="1"
                               domain="[('id','!=',active_id),('unbuild_type','=','main')]"
                               attrs="{'invisible':[('unbuild_type','!=','subproduct')], 'readonly':[('parent_id','!=',False)]}"/>
                    </group>
                    <div name="unbuild_section" attrs="{'invisible':[('unbuild_type','=','subproduct'),('parent_id','=',False)]}">
                        <group col="4">
                            <!-- Eliminado 01/23, ahora se hace desde wizard
                            <field name="unbuild_set_id"/>  -->
                            <field name="unbuild_location_id" force_save="1" readonly="1"/>
                            <field name="standard_price" widget="monetary"/>
                        </group>
                        <field name="inventory_line_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="location_id"/>
                                <field name="difference_qty"/>
                                <field name="product_uom_id"/>
                                <field name="unbuild_unit_value"/>
                                <field name="state"/>
                                <field name="inventory_id" optional="hide"/>
                            </tree>
                        </field>


                            <!-- Eliminado 01/23, ahora se hace desde wizard

                        <field name="unbuild_product_line_ids">
                            <tree editable="bottom">
                                <field name="part_id"/>
                                <field name="name"/>
                                <field name="qty"/>
                                <field name="standard_price"/>
                                <field name="newproduct_id" readonly="1" decoration-warning="1"/>
                            </tree>
                        </field> -->
                        <group col="4">
                            <field name="unbuild_project_id" force_save="1" readonly="1"/>
                            <field name="unbuild_task_id"/>
                        </group>

                            <!-- Eliminado 01/23, ahora se hace desde wizard
                        <h4>Subproducts:</h4>
                        <field name="subproduct_ids"/>
                        <field name="unbuild_type_readonly" invisible="1"/>    -->
                    </div>
                </page>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="unbuild_project_id" readonly="1" force_save="1" attrs="{'invisible':[('unbuild_type','!=','refurbish')]}"/>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="attrs">{"readonly": [("unbuild_type","in",['main','subproduct','refurbish'])]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='chassis_pt']" position="attributes">
                <attribute name="attrs">{"readonly": [("parent_id","!=",False)], 'invisible':[('attribute_line_ids','!=',[])]}</attribute>
            </xpath>
        </field>
        <field name="priority">64</field>
    </record>

    <record id="unbuild_part_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <field name="category_id" required="1"/>
                        <field name="product_id"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.part</field>
        <field name="name">Default form view for unbuild part</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="unbuild_set_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="line_ids" context="{'default_qty':1}">
                            <tree editable="bottom">
                                <field name="part_id" required="1"/>
                                <field name="qty" required="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.set</field>
        <field name="name">Default form view for unbuild set</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="unbuild_part_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.part</field>
        <field name="name">Default tree view for unbuild part</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="unbuild_set_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="line_ids" widget="many2many_tags"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.set</field>
        <field name="name">Default tree view for unbuild set</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>


</odoo>
