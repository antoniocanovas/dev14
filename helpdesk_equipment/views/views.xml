<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <!-- Helpdesk inh view for service and equipment: -->
    <record id="helpdek_equipment_view_inh" model="ir.ui.view">
        <field name="name">credentials ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[1]/field[@name='priority']" position="after">
                <field name="service_id"/>
                <field name="equipment_id"/>
                <field name="partner_credentials_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Related tickets in Equipment Service view (action) -->
    <record id="action_button_view_service_tickets" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_service_id': active_id,'default_service_id': active_id}</field>
        <field name="domain">[('service_id', '=', active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p>Tickets asociados a servicio</p>]]></field>
        <field name="limit">80</field>
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="helpdesk_mgmt.ticket_view_tree"/>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="action_view_equipment_tickets" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_equipment_id': active_id,'default_equipment_id': active_id}</field>
        <field name="domain">[('equipment_id', '=', active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p>Tickets asociados a equipo</p>]]></field>
        <field name="limit">80</field>
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="helpdesk_mgmt.ticket_view_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="equipment_tickets_view" model="ir.ui.view">
        <field name="name">Equipment Tickets</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-info" type="action" name="%(helpdesk_equipment.action_view_equipment_tickets)d">
                    <field name="tickets_count" string="Tickets" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


    <!-- Related tickets in Equipment Service view (inherited view) -->
    <record id="view_service_ticket_count" model="ir.ui.view">
        <field name="name">Equipment Service tickets</field>
        <field name="model">equipment.service</field>
        <field name="inherit_id" ref="equipment_service.equipment_service_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-info" type="action" name="%(helpdesk_equipment.action_button_view_service_tickets)d">
                    <field name="tickets_count" string="Tickets" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>