<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="donation_form_view" model="ir.ui.view">
        <field name="name">Donation purchase form view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='products']" position="after">
                <page name="donation" string="Donations">
                    <group name="donation_set">
                        <field name="donation_set_id"/>
                    </group>
                    <field name="donation_line_ids">
                        <tree editable="bottom">
                            <field name="product_id" domain="[('donation_template','=',True)]"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="newproduct_id" readonly="1" decoration-warning="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
        <field name="priority">64</field>
    </record>

    <record id="donation_set_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="line_ids" context="{'default_qty':1}">
                            <tree editable="bottom">
                                <field name="product_id" required="1" domain="[('donation_template','=',True)]"/>
                                <field name="qty" required="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">donation.set</field>
        <field name="name">Default form view for donation set</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="donation_set_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="line_ids" widget="many2many_tags"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">donation.set</field>
        <field name="name">Default tree view for donation set</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

