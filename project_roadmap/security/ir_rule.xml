<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.rule" id="roadmap_manager">
        <field name="name">Roadmap Manager</field>
        <field name="model_id" ref="model_project_roadmap"></field>
        <field name="domain_force">[ (1,'=',1)]</field>
        <field name="groups" eval="[(6, 0, [ref('project_roadmap.group_roadmap_manager')])]"/>
        <field eval="1" name="perm_write"></field>
        <field eval="1" name="perm_read"></field>
        <field eval="1" name="perm_unlink"></field>
        <field eval="1" name="perm_create"></field>
    </record>

    <record model="ir.rule" id="roadmap_user">
        <field name="name">Roadmap user</field>
        <field name="model_id" ref="model_project_roadmap"></field>
        <field name="domain_force">['|','|',('user_id','=',user.id),
            ('message_partner_ids','in', [user.partner_id.id]),
            ('project_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(6, 0, [ref('project_roadmap.group_roadmap_user')])]"/>
        <field eval="1" name="perm_write"></field>
        <field eval="1" name="perm_read"></field>
        <field eval="1" name="perm_unlink"></field>
        <field eval="1" name="perm_create"></field>
    </record>

</odoo>