<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="action_view_invoice_2_roadmap" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'default_type': 'invoice','default_invoice_id': active_id}</field>
        <field name="domain">[('invoice_id', '=', active_id),('active','in',[True,False])]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"></field>
        <field name="limit">80</field>
        <field name="name">Roadmap</field>
        <field name="res_model">project.roadmap</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="project_roadmap_default_tree"/>
        <field name="usage" eval="False"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="project_roadmap_invoice_form_inh" model="ir.ui.view">
        <field name="name">Project Roadmap Invoice Form Inherited</field>
        <field name="model">account.move</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" icon="fa-dedent"
                            type="action" name="%(project_roadmap.action_view_invoice_2_roadmap)d"
                            attrs="{'invisible':[('move_type','not in',['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}">
                        <field string="Roadmap" widget="statinfo" name="roadmap_count" />
                    </button>
                </div>
            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>

</odoo>
