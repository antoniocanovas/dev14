<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Equipment Services VIEWS -->
    <record id="equipment_service_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form name="equipment_service_default_form">
                <sheet string="Equipment">
                    <div class="oe_button_box" name="button_box">

                    </div>
                    <h2>
                        <field name="name" placeholder="Service name ..."/>
                    </h2>
                    <group>
                        <field name="type_id" required="1"/>
                        <field name="equipment_id"/>
                    </group>
                    <field name="note" placeholder="Notes, version, tips, ..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">equipment.service</field>
        <field name="name">Default Equipment Service form</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="equipment_service_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree name="equipment_service_main_tree">
                <field name="name"/>
                <field name="type_id"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="equipment_id"/>
                <field name="create_date" optional="hide"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">equipment.service</field>
        <field name="name">Default Equipment Service tree</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="equipment_service_search" model="ir.ui.view">
        <field name="name">Default equipment.service search</field>
        <field name="model">equipment.service</field>
        <field name="arch" type="xml">
            <search string="Equipment Service">
                <field name="name"/>
                <field name="equipment_id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="Equipment" context="{'group_by': 'type_id'}"/>
                    <filter string="Equipment" name="Equipment" context="{'group_by': 'equipment_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Service Types VIEWS -->
    <record id="equipment_service_type_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form name="equipment_service_type_default_form">
                <sheet string="Equipment Type">
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <h2>
                        <field name="name" placeholder="Service type name ..."/>
                    </h2>
                    <group>
                        <field name="is_pathway"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">equipment.service.type</field>
        <field name="name">Default Equipment Service Type form</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="equipment_service_type_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree name="equipment_service_type_main_tree">
                <field name="name"/>
                <field name="is_pathway"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">equipment.service.type</field>
        <field name="name">Default Equipment Service Type tree</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="equipment_service_type_search" model="ir.ui.view">
        <field name="name">Default equipment.service.type search</field>
        <field name="model">equipment.service.type</field>
        <field name="arch" type="xml">
            <search string="Equipment Service">
                <field name="name"/>
                <filter string="Is pathway" name="Pathway" domain="[('is_pathway', '=', True)]"/>
            </search>
        </field>
    </record>


    <!-- Services BUTTON on Equipment FORM View -->
    <record id="action_view_services" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_equipment_id': active_id,'default_equipment_id': active_id}</field>
        <field name="domain">[('equipment_id', '=',active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p> Services for equipment </p>]]></field>
        <field name="limit">80</field>
        <field name="name">Services</field>
        <field name="res_model">equipment.service</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hr_equipment_view_form_services" model="ir.ui.view">
        <field name="name">hr.equipment.view.form.services</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-tasks" type="action" name="%(equipment_service.action_view_services)d">
                    <field name="services_count" string="Services" widget="statinfo"/>
                </button>
            </xpath>
            <field name="category_id" position="after">
                <field name="ip_address"/>
                <field name="pathway_id"/>
            </field>
        </field>
    </record>

</odoo>