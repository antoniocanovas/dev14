<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="project_exp_tab_view" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button class="oe_stat_button" string="Actualizar TrÃ¡mites" icon="fa-level-down" type="object" name="create_case_tasks" attrs="{'invisible':['|',('procedure_id','=',False),('is_procedure','=',False)]}"/>
                    <button class="oe_stat_button" string="Es procedimiento" icon="fa-level-up" type="object" name="make_procedure" attrs="{'invisible':[('is_procedure','=',True)]}"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="acciones" string="Procedimiento" attrs="{'invisible':[('is_procedure','=',False)]}">
                        <group name="procedures">
                            <field name="is_procedure" invisible='1'/>
                            <field name="procedure_id" widget='selection'/>
                        </group>
                        <field name="task_ids">
                            <tree editable="1" decoration-danger="date_deadline and (date_deadline&lt;current_date)">
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="departament_id"/>
                                <field name="dependency_task_ids" widget="many2many_tags"/>
                                <field name="date_deadline"/>
                                <field name="stage_id"/>
                                <field name="active"/>
                                <field name="procedure_line_id" invisible="1"/>
                                <field name="project_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <field name="description" position="before">
                    <field name="gap_ids" attrs="{'invisible':[('is_procedure','=',False)]}">
                        <tree name="project_gaps" editable="botton" default_order="priority desc">
                            <field name="priority"/>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="user_id"/>
                            <field name="state"/>
                            <field name="date_limit"/>
                        </tree>
                    </field>
                </field>
            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">project.project</field>
        <field name="name">project.project.form.exp</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>

    <record id="project_project_stages_form_inh" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="etapas_proyecto" string="Etapas">
                        <group name="grupo_etapas_proyecto">
                            <field name="type_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="fold"/>
                                    <field name="description"/>
                                    <field name="is_closed"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="mode">extension</field>
        <field name="model">project.project</field>
        <field name="name">project.project.stages.form.inh</field>
        <field name="type">form</field>
    </record>


</odoo>
