<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>

        <template id="work_sheet_report_document_report">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <div class="text-center">
                        <h1><span t-field="o.name"/></h1>
                    </div>
                    <div>
                        <div>
                            <span t-field="o.type"/>
                            <span t-field="o.employee_id"/>
                            <span t-field="o.date"/>
                            <span t-field="o.partner_id"/>
                            <span t-field="o.type"/>
                            <span t-field="o.type"/>
                        </div>
                        <div class="text-center">
                            <h3><span t-field="o.sale_id"/></h3>
                        </div>
                        <t t-if="o.line_ids">
                            <h2>Productos:</h2>
                            <table class="table table-sm o_main_table">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th name="th_product">Producto</th>
                                        <th name="td_units">Cantidad</th>
                                        <th name="th_measure">Unidad de medida</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td name="td_product"><span t-field="line.product_id" /></td>
                                            <td name="td_units"><span t-field="line.product_uom_qty" /></td>
                                            <td name="td_measure"><span t-field="line.product_uom.name" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <br/>
                        </t>
                        <p>Firmado por: <span t-field="o.partner_id.name" /> el <span t-field="o.write_date" />
                            <br/>
                            <img t-if="o.signature" t-attf-src="data:image/*;base64,{{o.signature}}"/></p>
                    </div>
                </div>
            </t>
        </template>

        <template id="work_sheet_report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="external_work.work_sheet_report_document_report" t-lang="lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
