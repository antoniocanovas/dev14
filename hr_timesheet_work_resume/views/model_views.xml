<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="act_work_resume_2_todo" model="ir.actions.act_window">
        <field name="name">To-do</field>
        <field name="res_model">timesheet.line.todo</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_work_id': active_id, 'default_work_id': active_id}</field>
        <field name="groups_id" eval="False"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Project!
            </p>
        </field>
    </record>

    <record id="ts_resume_work_form_inh" model="ir.ui.view">
        <field name="name">Resume work form inh</field>
        <field name="model">timesheet.work</field>
        <field name="inherit_id" ref="hr_timesheet_work.timesheet_work_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/h1" position="before">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="action" name="%(hr_timesheet_work_extended.act_work_resume_2_todo)d" icon="fa-tasks">
                        <field string="To-do" name="todo_count" widget="statinfo"/>
                    </button>
                </div>
            </xpath>
            <field name="type" position="after">
                <field name="sale_order_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>


</odoo>
