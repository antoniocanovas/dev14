<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="action_activity_done" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_author_id': active_id,'default_author_id': active_id}</field>
        <field name="domain">[('author_id', '=',active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p> Activity Done </p>]]></field>
        <field name="limit">80</field>
        <field name="name">Activity</field>
        <field name="res_model">mail.message</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="activity_done_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="res_partner_activity_done" model="ir.ui.view">
        <field name="name">partner.activity.done</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-info" type="action" name="%(action_activity_done)d" groups="base.group_user">
                    <field name="activity_done_count" string="Activity's" widget="statinfo"/>
                </button>

            </xpath>
        </field>
    </record>

</odoo>