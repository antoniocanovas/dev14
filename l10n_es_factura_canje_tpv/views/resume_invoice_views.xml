<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="factura_canje_tree" model="ir.ui.view">
        <field name="arch" type="xml">
            <tree string="Facturas de canje">
                <field name="name" modifiers="{}"/>
                <field name="partner_id"/>
                <field name="create_uid" widget="many2one_avatar_user" optional="show"/>
                <field name="date"/>
            </tree>
        </field>
        <field name="model">resume.invoice</field>
        <field name="name">Default tree view for resume invoice</field>
        <field name="type">tree</field>
    </record>

    <record id="factura_canje_form" model="ir.ui.view">
        <field name="name">resume.invoice.form</field>
        <field name="model">resume.invoice</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="Facturas de canje">
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group name="basic_params">
                        <group>
                            <field name="partner_id"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible':[('type','=','historica')]}">
                        <page string="Tickets">
                            <field name="pos_order_ids"/>
                        </page>
                    </notebook>
                    <field name="description" placeholder="Notas en caso de facturas actuales, o detalle completo fiscal de histÃ³ricas"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
        <field name="type">form</field>
    </record>

</odoo>