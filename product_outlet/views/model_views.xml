<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="product_template_outlet_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="self"/>
                <field name="default_code"/>
                <field name="list_price"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">product.template</field>
        <field name="name">product template outlet tree</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="product_template_outlet_form" model="ir.ui.view">
        <field name="name">Product Template Outlet Form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="outlet"/>
                    <label for="outlet"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="before">
                <page name="Outlet" string="Outlet" attrs="{'invisible':[('outlet','=',False)]}">
                    <h3>Details:</h3>
                    <group name="outlet_general">
                        <group>
                            <field name="default_code"/>
                            <field name="outlet_supplier_id"/>
                        </group>
                        <group>
                            <field name="outlet_customer_id"/>
                            <field name="outlet_legal_customer_id"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
