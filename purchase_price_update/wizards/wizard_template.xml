<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="price_unit_wizard_view" model="ir.ui.view">
        <field name="name">Prie Unit Wizard</field>
        <field name="model">price.unit.info</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-center">
                    <field name="message"/>
                </p>

                <footer>
                    <button name="update_product_standard_price" string="Actualiza" class="oe_right oe_highlight"
                            type="object"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>