<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="scrap_crm_res_company_inh_form" model="ir.ui.view">
        <field name="name">SCRAP Company Parameters</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page name="scrap_crm" string="CRM">
                    <group>
                        <field name="scrap_project_id"/>
                        <field name="scrap_user_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
