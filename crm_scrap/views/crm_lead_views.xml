<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="crm_lead_scrap_inh" model="ir.ui.view">
        <field name="name">SCRAP CRM Inherit Form View</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <h2><field name="brand_id" placeholder="Brand" required="1"/></h2>
            </xpath>
            <field name="vat" position="after">
                <field name="partner_ref"/>
            </field>
            <field name="tag_ids" position="after">
                <field name="partner_tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
            </field>
            <xpath expr="//form/sheet/div[@class='oe_title']/h2/div[4]" position="replace">
                <div class="col">
                    <div class="oe_edit_only d-flex align-items-center">
                        <label for="market_value" string="Market and quotation value:"/>
                    </div>
                    <div id="other_prices" class="o_row d-flex">
                        <field name="market_value" widget="monetary" class="oe_inline"/>
                        <field name="quotation_value" widget="monetary" class="oe_inline"/>
                        <field name="probability" invisible="1"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                <field name="city"/>
            </xpath>
            <field name="description" position="before">
                <h4>Sales notes:</h4>
            </field>
            <field name="description" position="after">
                <h4>Technical notes:</h4>
                <field name="description_tech" placeholder="Technical notes ..."/>
                <field name="task_ids" context="{'default_partner_id':partner_id, 'default_project_id':scrap_project_id, 'default_user_id':scrap_user_id}">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="product_id" optional="show"/>
                        <field name="brand_id"/>
                        <field name="categ_id"/>
                        <field name="user_id"/>
                        <field name="project_id"/>
                        <field name="tag_ids" widget="many2many_tags" string="Procesos"/>
                        <field name="stage_id" readonly="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="id" widget="open_tab" nolabel="1"/>
                    </tree>
                </field>
                <group>
                    <field name="create_date"/>
                    <field name="scrap_project_id" invisible="1"/>
                    <field name="scrap_user_id" invisible="1"/>
                </group>
            </field>
        </field>
    </record>

    <record id="crm_lead_scrap_kanban_inh" model="ir.ui.view">
        <field name="name">SCRAP CRM Inherit Kanban View</field>
        <field name="model">crm.lead</field>
        <field name="type">kanban</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//kanban[1]" position="attributes">
                    <attribute name="quick_create">false</attribute>
                </xpath>
                <field name="activity_state" position="after">
                    <field name="partner_ref"/>
                </field>
                <xpath expr="//div[hasclass('oe_kanban_content')]" position="inside">
                    <div>
                        <field name="partner_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="phone" widget="phone"/>
                        <field name="partner_ref"/>
                        <field name="city"/>
                        <field name="state_id"/>
                    </div>
                </xpath>
            </data>
        </field>
    </record>


    <record id="crm_lead_scrap_tree_inh" model="ir.ui.view">
        <field name="name">SCRAP CRM Inherit Tree View</field>
        <field name="model">crm.lead</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <!--
                <field name="partner_name" position="after">
                    <field name="partner_ref" optional="show"/>
                </field>
                -->
            </data>
        </field>
    </record>

</odoo>
