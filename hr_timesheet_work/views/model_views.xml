<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="work_sheet_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_lot_worksheet_services" string="Create lot services" type="object" class="btn-primary"/>
                    <widget name="signature" string="Sign" highlight="1" attrs="{'invisible': [('partner_id', '=', False)]}" full_name="partner_id"/>
                    <!--<field name="signature_status" widget="statusbar" />-->
                </header>
                <sheet>
                    <h1><field name="name" widget="text"/></h1>
                    <group name="work_sheet_main"><group>
                        <field name="date"/>
                        <field name="work_id" force_save="1" widget="selection" attrs="{'readonly':[('work_readonly','=',True)]}"/>
                        <field name="project_id" options="{'no_create': True}" domain="[('id','in',project_ids)]" attrs="{'required':[('work_id','!=',False)]}"/>
                    </group><group>
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                        <field name="partner_id"/>
                        <field name="work_readonly" invisible="1"/>
                    </group></group>

                    <notebook name="project_services" attrs="{'invisible':[('work_id','=',False)]}">
                        <page name="project_services" string="Services">
                            <group><group>
                                <field name="task_id" options="{'no_create': True}" domain="[('project_id','=',project_id)]" attrs="{'invisible':[('project_id','=',False)]}"/>
                                <field name="employee_ids" widget="many2many_tags" groups="hr_timesheet.group_hr_timesheet_approver"/>
                            </group><group>
                                <field name="start" widget="timesheet_uom" attrs="{'invisible':['|',('type','=','production'),('set_start_stop','=',False),('type','!=','production')]}"/>
                                <field name="stop" widget="timesheet_uom" attrs="{'invisible':['|',('type','=','production'),('set_start_stop','=',False),('type','!=','production')]}"/>
                                <field name="duration" widget="timesheet_uom" attrs="{'invisible':['|',('set_start_stop','=',True),('type','=','production')]}"/>
                                <field name="time_type_id" widget="selection"/>
                            </group></group>
                            <div attrs="{'invisible':[('project_id','!=',False)]}">
                                <h2>Active projects:</h2>
                                <field name="project_ids"/>
                            </div>
                            <div attrs="{'invisible':[('project_id','=',False)]}">
                                <field name="project_service_ids" attrs="{'readonly':[('task_id','=',False)]}" context="{'default_project_id':project_id, 'default_task_id':task_id,'default_account_id':project_analytic_id, 'default_name':'/', 'default_company_id': company_id}">
                                    <tree editable="bottom" string="Timesheet Activities" default_order="date">
                                        <field name="task_id" options="{'no_create': True}"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="employee_id" required="1" widget="many2one_avatar_employee" options="{'no_create': True}"/>
                                        <field name="name" required="0" widget="text"/>
                                        <field name="time_start" widget="timesheet_uom"/>
                                        <field name="time_stop" widget="timesheet_uom"/>
                                        <field name="unit_amount" widget="timesheet_uom" decoration-danger="unit_amount &gt; 24"/>
                                        <field name="time_type_id"/>
                                        <field name="project_id" invisible="1"/>
                                        <field name="date"/>
                                        <field name="tag_ids" widget="many2many_tags"/>
                                        <field name="account_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="set_start_stop" invisible="1"/>
                                    </tree>
                                </field>
                            </div>
                        </page>
                        <page name="work_sheet_project_products" string="Products" attrs="{'invisible':[('type','!=','project')]}">
                            <h3>Pickings:</h3>
                            <field name="picking_ids" attrs="{'readonly':[('project_id','=',False)]}" context="{'default_company_id': company_id}"/>
                            <h3>Products:</h3>
                            <field name="project_product_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <div name="signature">
                        <field name="signature" widget="image" attrs="{'invisible':[('signature','=',False)]}"/>
                    </div>
                    <field name="type" invisible="1"/>
                    <field name="set_start_stop" invisible="1"/>
                    <field name="project_analytic_id" invisible="1"/>
                    <field name="project_so_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">work.sheet</field>
        <field name="name">Work Sheet form view</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="work_sheet_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree name="work_sheet_tree" string="Work Sheet"  default_order='create_date desc'>
                <field name="name"/>
                <field name="work_id"/>
                <field name="date"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">work.sheet</field>
        <field name="name">Work Sheet Tree View</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="work_sheet_tree_search" model="ir.ui.view">
        <field name="name">work.sheet.tree.search</field>
        <field name="model">work.sheet</field>
        <field name="arch" type="xml">
            <search string="Search Work Sheet">
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="type" filter_domain="[('time_type_id', 'ilike', self)]"/>
                <field name="work_id" filter_domain="[('work_id', 'ilike', self)]"/>
                <separator/>
                <filter string="Projects" name="type_project" domain="[('type', '=', 'project')]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="schedule" string="Schedule" domain="[]" context="{'group_by' : 'time_type_id'}" />
                    <filter name="work_type" string="Work" context="{'group_by': 'work_id'}"/>
                    <filter name="date" string="Date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="timesheet_work_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Work" sample="1"  default_order='create_date desc'>
                <field name="name"/>
                <field name="type"/>
                <field name="partner_id"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">timesheet.work</field>
        <field name="name">Work Work default Tree View</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    # Acción de ventana para el botón de items a planificar:
    <record id="act_tswork_2_linetodo" model="ir.actions.act_window">
        <field name="name">To do</field>
        <field name="res_model">timesheet.line.todo</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_work_id': active_id, 'default_work_id': active_id}</field>
        <field name="groups_id" eval="False"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new measure item !
            </p>
        </field>
    </record>
    # Fin acción de ventana

    <record id="timesheet_work_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(hr_timesheet_work.act_tswork_2_linetodo)d" icon="fa-tasks">
                            <field string="Sale Order" name="line_todo_count" widget="statinfo"/>
                        </button>
                    </div>

                    <h1><field name="name"/></h1>
                    <group name="project">
                        <field name="type" widget="selection"/>
                        <field name="sale_order_ids" widget="many2many_tags"/>
                        <field name="partner_id"/>
                        <field name="project_id"/>
                        <field name="set_start_stop" string="Start/stop time" attrs="{'invisible':[('type','not in',['repair','project'])]}"/>
                    </group>
                    <field name="active" invisible="1"/>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">timesheet.work</field>
        <field name="name">Work form default View</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="analytic_tag_worksheet_inh" model="ir.ui.view">
        <field name="name">Hide analytic tag field in worksheets</field>
        <field name="model">account.analytic.tag</field>
        <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="timesheet_hidden"/>
            </field>
        </field>
    </record>

    <record id="stock_picking_worksheet_inh" model="ir.ui.view">
        <field name="name">Show worksheet in stock picking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="work_sheet_id"/>
            </field>
        </field>
    </record>

    <record id="hr_timesheet_line_tree_self_id" model="ir.ui.view">
        <field name="name">Hr timesheet self ID</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="before">
                <field name="self_id" optional="hide" context="{'form_view_ref':'hr_timesheet.timesheet_view_form_user'}" groups="account.group_account_manager"/>
            </field>
        </field>
    </record>

    <record id="view_hr_timesheet_line_form_tracking" model="ir.ui.view">
        <field name="name">hr.timesheet.line.form.tracking</field>
        <field name="model">account.analytic.line</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
