<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="product_bulk_inh_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <page name="inventory" position="inside">
                    <group string="Bulk product">
                        <field name="bulk_id"/>
                        <field name="bulk_uom_id"/>
                        <field name="bulk_ratio"/>
                    </group>
                </page>
            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">product.product</field>
        <field name="name">Product Bulk inherit view</field>
        <field name="priority">32</field>
        <field name="type">form</field>
    </record>

</odoo>