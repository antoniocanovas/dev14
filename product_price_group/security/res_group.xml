<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_product_price" model="res.groups">
        <field name="name">Product prices</field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="share" eval="True"/>
    </record>


    <!-- Saleman can see prices   -->
    <record id="sales_team.group_sale_salesman" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_product_price'))]"/>
    </record>

    <!-- Purchase users can see prices   -->
    <record id="purchase.group_purchase_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_product_price'))]"/>
    </record>

    <!-- Invoicing users can see prices   -->
    <record id="account.group_account_invoice" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_product_price'))]"/>
    </record>

</odoo>