<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Hide prices for product.template TREE view -->
    <record id="product_template_group_price_tree" model="ir.ui.view">
        <field name="name">Hide prices to users out of group</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </field>
        </field>
    </record>

    <!-- Hide prices for product.template FORM view -->
    <record id="product_template_group_price_form" model="ir.ui.view">
        <field name="name">Hide prices to users out of group form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </xpath>
        </field>
    </record>

    <!-- Hide prices for product.template KANBAN view -->
    <record id="product_template_group_price_kanban" model="ir.ui.view">
        <field name="name">Hide prices to users out of group kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_lst_price']" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </xpath>
        </field>
    </record>

    <!-- Hide prices for product.product TREE view -->
    <record id="product_product_group_price_tree" model="ir.ui.view">
        <field name="name">Hide prices to users out of group</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </field>
        </field>
    </record>

    <!-- Hide prices for product.template KANBAN view -->
    <record id="product_product_group_price_kanban" model="ir.ui.view">
        <field name="name">Hide prices to users out of group kanban</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//templates/t/div/div/ul" position="attributes">
                <attribute name="groups">product_price_group.group_product_price</attribute>
            </xpath>
        </field>
    </record>


</odoo>