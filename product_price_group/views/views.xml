<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="action_view_credentials" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_equipment_id': active_id,'default_equipment_id': active_id}</field>
        <field name="domain">[('equipment_id', '=',active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p> Credentials for equipment </p>]]></field>
        <field name="limit">80</field>
        <field name="name">Credentials</field>
        <field name="res_model">partner.credentials</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="partner_credentials.credentials_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hr_equipment_view_form_credentials" model="ir.ui.view">
        <field name="name">hr.equipment.view.form.credentials</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-diamond" type="action" name="%(equipment_credential.action_view_credentials)d">
                    <field name="credential_count" string="Credenciales" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="credential_equipment_view_form_inh" model="ir.ui.view">
        <field name="name">credential.equipment.view.form.inh</field>
        <field name="model">partner.credentials</field>
        <field name="inherit_id" ref="partner_credentials.credentials_form"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="service_id"/>
            </field>
            <field name="public" position="after">
                <field name="equipment_id"/>
            </field>
        </field>
    </record>

    <!-- For services -->

    <record id="action_view_credentials_services" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_service_id': active_id,'default_service_id': active_id}</field>
        <field name="domain">[('service_id', '=',active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p> Credentials for Services </p>]]></field>
        <field name="limit">80</field>
        <field name="name">Credentials</field>
        <field name="res_model">partner.credentials</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="partner_credentials.credentials_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="services_view_form_credentials" model="ir.ui.view">
        <field name="name">equipment service equipment service 2 credentials</field>
        <field name="model">equipment.service</field>
        <field name="inherit_id" ref="equipment_service.equipment_service_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-diamond" type="action" name="%(equipment_credential.action_view_credentials_services)d">
                    <field name="credential_count" string="Credenciales" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo>