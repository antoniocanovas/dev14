<odoo>
    <record id="purchase_order_line_price_history_discount_view_form" model="ir.ui.view">
        <field name="name">purchase.order.line.price.history.discount.view.form</field>
        <field name="model">purchase.order.line.price.history</field>
        <field name="inherit_id" ref="purchase_order_price_history.purchase_order_line_price_history_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/field/form/group/field[@name='price_unit']" position="after">
                <field name="discount"/>
                <field name="price_net" widget="monetary"/>
            </xpath>
            <xpath expr="//form/group/field/tree/field[@name='price_unit']" position="after">
                <field name="discount"/>
                <field name="price_net"/>
            </xpath>
        </field>
    </record>
</odoo>
